<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:inputType="textPersonName"
        android:text="Name" />

    <TableLayout
        android:layout_width="wrap_content"
       android:layout_gravity="center"
        android:layout_height="wrap_content">
    <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

        <Button
            android:id="@+id/nine"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:text="9" />

        <Button
            android:id="@+id/eight"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:text="8" />

        <Button
            android:id="@+id/seven"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:text="7" />


        </TableRow>
        <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

            <Button
                android:id="@+id/six"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:onClick="show"
                android:text="6" />

            <Button
                android:id="@+id/five"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:onClick="show"
                android:text="5" />

            <Button
                android:id="@+id/four"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:onClick="show"
                android:text="4" />


    </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <Button
                android:id="@+id/three"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:onClick="show"
                android:text="3" />

            <Button
                android:id="@+id/two"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:onClick="show"
                android:text="2" />

            <Button
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:onClick="show"
                android:text="1" />


        </TableRow>


        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <Button
                android:id="@+id/plus"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:onClick="calc"
                android:text="+" />

            <Button
                android:id="@+id/minus"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:onClick="calc"
                android:text="-" />

            <Button
                android:id="@+id/equal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:onClick="equal"
                android:text="=" />


        </TableRow>




    </TableLayout>


</FrameLayout>
